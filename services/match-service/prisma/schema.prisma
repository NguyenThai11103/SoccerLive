generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MatchStatus {
  UPCOMING
  LIVE
  FINISHED
  CANCELLED
}

model Match {
  id          String      @id @default(uuid())
  homeTeam    String
  awayTeam    String
  homeScore   Int         @default(0)
  awayScore   Int         @default(0)
  status      MatchStatus @default(UPCOMING)
  startTime   DateTime
  endTime     DateTime?
  streamKey   String      @unique
  streamUrl   String?
  thumbnail   String?
  league      String?
  season      String?
  venue       String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("matches")
}
